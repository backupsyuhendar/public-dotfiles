#!/bin/sh

dirFile='~/Pictures/scrot/'
dunstify --replace=3 -t 1000 "Tunggu 3 detik";
scrot -d 3 -e 'mv $f ~/Pictures/scrot/$f && xclip -t image/png ~/Pictures/scrot/$f -sel clip';
notify-send --replace-id=3 "Screenshot disimpan di $dirFile";
paplay /usr/share/sounds/freedesktop/stereo/screen-capture.oga;

