#!/bin/bash


waktu=$(date +'%d-%m-%Y')
dir="$HOME/Pictures/scrot/scrot-gui/$waktu"
dirmv="$HOME/Pictures/scrot/scrot-gui"
[ ! -d "$dir" ] && mkdir "$dir"
# dunstify --replace=100 "$dir"

scrot --line style=dash,width=3,color="orange" --select -f -e '\
	mv $f ~/Pictures/scrot/scrot-gui; dunstify --replace=3 "Screenshot disimpan di ~/Pictures/scrot/scrot-gui"; \ 
	paplay /usr/share/sounds/freedesktop/stereo/screen-capture.oga'
xclip -t image/png ~/Pictures/scrot/scrot-gui/*.png -sel clip
# dunstify --replace=3 "Screenshot disimpan di $dir";
mv $dirmv/*.png $dir
